<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InstaHub</title>
    <link rel="stylesheet" type="text/css" href="~/css/semantic.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <style>
        body{
            margin: 0;
            padding: 0;
            height: 100%;
        }

        #wrapper {
            min-height: 100%;
            position: relative;
        }

        .spacer {
            width: 225px;
        }

        #footer {
            width: 100%;
            height: 60px;
            position: fixed;
            bottom: 0;
            left: 0;
            padding-right: 25px;
        }

        .pusher {
            padding-left: 225px;
            padding-right: 25px;
        }

        #navLinkBar {
            padding-left: 220px;
        }
    </style>
</head>
    <body>
        <nav>
            <div class="ui inverted menu">
                <div id="navLinkBar" class="ui inverted menu" >
                    <a class="active item" asp-controller="Home" asp-action="Index">Home</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        //<a class="item" asp-controller="Account" asp-action="Logout">Logout</a>
                        <a class="item" asp-controller="Account" asp-action="Logout">Logout</a>
                    }
                    else
                    {
                        <a class="item" asp-controller="Account" asp-action="Login">Login</a>
                        @*<a class="item" asp-controller="Account" asp-action="ExternalLogin">External-Login</a>*@
                        <a class="item" asp-controller="Account" asp-action="Register">Register</a>
                    }
                </div>
            </div>
        </nav>

        <partial name="_CookieConsentPartial" />

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2019 - InstaHub</p>
            </footer>
        </div>
        @RenderSection("Scripts", required: false)

        <script src="https://code.jquery.com/jquery-3.1.1.min.js"
                integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
                crossorigin="anonymous"></script>
        <script src="~/js/semantic.min.js"></script>
        <script src="~/lib/signalr/dist/browser/signalr.js"></script>
        <script src="~/js/chat.js"></script>
        <script>
            $(document).ready(function () {
                $('.ui.longer.modal')
                    .modal('show');
            });
        </script>
    </body>
</html>
